<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href='https://unpkg.com/css.gg@2.0.0/icons/css/log-out.css' rel='stylesheet'>
    <link rel="stylesheet" href="/css/LandingPageStyle.css">
    <style>
        /* LOGOUT BUTTON START */
        body {
            background-color: #ECEAEA;
        }

        .logout {
            float: right;
            position: relative;
            cursor: pointer;
            border: 0;
            background: transparent;
            font-size: 17px;
            font-family: inherit;
            width: 12rem;
        }

        .circle {
            transition: 0.5s;
            display: block;
            width: 50px;
            height: 50px;
            background: #000000;
            border-radius: 50px;
        }

        .button-text {
            width: 160px;
            transition: 0.2s;
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            color: #000000;
            font-weight: 700;
            text-align: center;
            text-transform: uppercase;
        }

        .gg-log-out {
            margin-top: 17px;
            margin-left: 17px;
            transition: 0.2s;
            position: absolute;
            top: 0;
            left: 9px;
            right: 0;
            bottom: 0;
            color: #ffffff;
            font-weight: 700;
            text-align: center;
            text-transform: uppercase;
        }

        .logout:active .gg-log-out {
            color: red;
            transform: scale(0.8);
        }

        .logout:hover .gg-log-out {
            color: red;
        }

        .logoutt {
            margin-right: -100px;
            margin-top: 30px;
            width: 50%;
            float: right;
        }

        /* LOGOUT BUTTON END */

        /* ADD BUTTON START */
        .add-btn {
            text-align: center;
            padding-top: 4px;
            margin: 18px 20px 0px 0px;
            width: 55px;
            height: 25px;
            border: 2px solid #616161;
            color: #616161;
            font-size: 20px;
            font-weight: bold;
            text-decoration: none;
            float: right;
            transition: 0.2s;
        }

        .add-btn:active {
            transform: scale(0.95);
        }

        /* ADD BUTTON END */

        /* MAIN HEADING */
        h1 {
            display: contents;
            font-size: 3em;
            font-weight: 300;
            color: #000000;
        }

        /* MAIN HEADING */

        /* BEACON DISPLAY TABLE START */
        .table {
            margin: 100px 30px 0 30px;
        }

        .R1 {
            height: 60px;
            background-color: #ffffff;
            font-family: sans-serif;
            font-size: 25px;
            color: #000000;
            height: 70px;
            font-weight: unset;
        }

        td:nth-child(4) {
            color: #206BC0;
        }


        .disp-tab {
            border: 2px solid black;
            height: 50px;
            font-size: 30px;
            color: #DDC6B6;
        }

        .disp-tab2 {
            border: 2px solid black;
            background-color: white;
            height: 50px;
            font-size: 30px;
            color: #DDC6B6;
        }

        .disp-tab2:hover td {
            transition: 0.3s;
            color: black;
        }

        td {
            height: 50px;
            font-family: OpenSans-Regular;
            font-size: 20px;
            color: #707070;
            font-weight: unset;
            text-align: center;
        }

        td:hover {
            color: #000000;
            cursor: pointer;
        }

        .container {
            left: 0;
        }

        .cont {
            margin-left: 30px;
            margin-right: 30px;
            width: 98%;
            border-collapse: collapse;
        }

        .beacon-data {
            height: 50px;
            background-color: #36304a;
        }

        .beacon-data:first-child {
            border-top-left-radius: 20px;
        }

        .beacon-data:last-child {
            border-top-right-radius: 20px;
        }


        .edit1 {
            transition: 0.3s;
            padding: 20px;
            text-decoration: none;
            font-weight: bolder;
            font-size: larger;
            color: rgb(174, 170, 170);
        }

        .del1 {
            transition: 0.3s;
            padding: 20px;
            text-decoration: none;
            font-weight: bolder;
            font-size: larger;
            color: rgb(174, 170, 170);
        }

        .edit1:hover {
            color: rgb(0, 147, 0);
        }

        .del1:hover {
            color: rgb(239, 106, 106);
        }

        .add-form {
            margin: auto;
            margin-top: 50px;
            width: 670px;
            background-color: #202020;
            padding: 20px;
            border-radius: 20px;
            position: relative;
        }

        .link {
            text-decoration: none;
            color: rgb(56, 90, 194);
        }

        /* BEACON DISPLAY TABLE END */

        /* ADD BEACON FORM START */
        .title {
            font-size: 28px;
            color: rgb(255, 255, 255);
            font-weight: 600;
            letter-spacing: -1px;
            position: relative;
            display: flex;
            align-items: center;
            padding-left: 30px;
        }

        .title::before,
        .title::after {
            position: absolute;
            content: "";
            height: 16px;
            width: 16px;
            border-radius: 50%;
            left: 0px;
            background-color: rgb(255, 255, 255);
        }

        .title::before {
            width: 18px;
            height: 18px;
            background-color: royalblue;
        }

        .title::after {
            background-color: rgb(255, 255, 255);
            width: 18px;
            height: 18px;
            animation: pulse 1s linear infinite;
        }

        .flex {
            margin-bottom: 20px;
            display: flex;
            width: 100%;
            gap: 6px;
        }

        .flex1 {
            margin-left: 100px;
            margin-bottom: 20px;
            display: flex;
            width: 100%;
            gap: 6px;
        }

        .add-form label {
            position: relative;
        }

        .input {
            font-size: 18px;
            width: 300px;
            margin-bottom: 30px;
            margin-right: 20px;
            padding: 10px 10px 20px 10px;
            outline: 0;
            border: 1px solid rgba(105, 105, 105, 0.397);
            border-radius: 10px;
        }

        .span {
            position: absolute;
            left: 10px;
            top: 15px;
            color: grey;
            font-size: 0.9em;
            cursor: text;
            transition: 0.3s ease;
        }

        .input:focus+.span {
            top: 30px;
            font-size: 0.7em;
            font-weight: 600;
        }

        .input:valid+.span {
            top: 30px;
            font-size: 0.7em;
            font-weight: 600;
            color: green;
        }

        .submit {
            border: none;
            outline: none;
            padding-top: 10px;
            width: 80px;
            height: 45px;
            background-color: royalblue;
            padding: 10px;
            border-radius: 10px;
            font-family: serif;
            text-shadow: 2px 2px 2px black;
            color: #fff;
            font-size: large;
            transition: 0.2s;
        }

        .submit:hover {
            cursor: pointer;
            background-color: rgb(56, 90, 194);
        }

        .submit:active {
            transform: scale(0.90);
        }

        .cancel:hover {
            background-color: rgb(209, 0, 0);
        }

        .cancel:active {
            transform: scale(0.90);
        }

        .cancel {
            background-color: rgb(191, 0, 0);
            padding-top: 10px;
            border-radius: 10px;
            width: 80px;
            height: 35px;
            color: white;
            text-align: center;
            text-decoration: none;
            float: right;
            display: inline;
            display: block;
            font-family: serif;
            text-shadow: 2px 2px 2px black;
            font-size: large;
            transition: 0.2s;
        }

        @keyframes pulse {
            to {
                transform: scale(1.8);
                opacity: 0;
            }
        }

        :invalid {
            color: rebeccapurple;
        }

        /* ADD BEACON FORM END */

        .status {
            margin-top: 10px;
            font-size: 22px;
            display: inline-block;
            margin-left: 8px;
            color: rgb(255, 250, 250);
        }

        /* EDIT PAGE START */
        .tick {
            transition: 0.2s;
            background-color: black;
            color: rgb(47, 255, 71);
        }

        .dropdown {
            margin-top: 10px;
            margin-left: 45px;
            margin-right: 200px;
            border-radius: 7px;
            padding-left: 10px;
            padding-top: 5px;
            padding-bottom: 5px;
            width: 70px;
            height: 30px;
            background-color: black;
            color: wheat;
            transition: 0.1s;
        }

        .dropdown:active {
            transform: scale(0.95);
        }

        .uuid {
            border-radius: 5px;
            padding: 10px;
            background-color: rgb(255, 255, 214);
            font-size: 20px;
            color: black;
        }

        /* EDIT PAGE START */

        /* ALERTS START */
        .added-msg {
            color: red;
        }

        .NBI {
            color: rgb(188, 0, 0);
            font-size: 30px;
            padding-top: 20px;
            padding-bottom: 20px;
            padding-left: 3px;
        }

        /* ALERTS END */

        /* SIDE NAVIGATION START */
        .sidenav {
            margin-top: 17px;
            height: 100%;
            width: 300px;
            position: fixed;
            top: 50px;
            left: -300px;
            background-color: #00302E;
            overflow-x: hidden;
            transition: 0.5s;
        }

        .sidenav-head {
            height: 180px;
            background-color: #025D5A;
        }

        .sidenav a {
            padding: 6px 8px 6px 16px;
            text-decoration: none;
            font-size: 25px;
            color: #818181;
            display: block;
        }

        .sidenav a:hover {
            color: #f1f1f1;
        }

        .main {
            margin-left: 0;
            transition: 0.5s;
        }

        .openbtn {
            font-size: 20px;
            cursor: pointer;
            background-color: #61d17b;
            color: black;
            margin: 10px;
            padding: 10px 15px;
            border: none;
            border-radius: 15px;
        }

        .top-bar {
            margin-top: -10px;
            background-color: white;
            margin-left: -10px;
        }

        .user {
            background-color: white;
            border-radius: 100px;
            margin-left: 20px;
            margin-top: 20px;
            height: 80px;
            width: 50%px;
        }

        .user-text {
            font-size: larger;
            color: white;
            margin-left: -230px;
            margin-top: 85px;
            float: left;
        }

        .user-name {
            font-family: sans-serif;
            font-size: 25px;
            color: white;
            margin-left: -230px;
            margin-top: 110px;
            float: left;
        }

        /* SIDE NAVIGATION END */
    </style>
</head>

<body>
    <div class="top-bar">
        <button class="openbtn" onclick="toggleNav()">&#9776;</button>
        <div class="sidenav" id="mySidenav" style="left: -300px;">
            <div class="sidenav-head">
                <img class="user" src="https://pixlok.com/wp-content/uploads/2021/10/User-Profile-Icon-9mces.png"
                    alt="">
                <div class="logoutt">
                    <form action="/logout" method="get">
                        <button class="logout">
                            <span class="circle" aria-hidden="true">
                                <i class="gg-log-out"></i>
                            </span>
                        </button>
                    </form>
                    <span class="user-text"><em>Signed in as</em></span>
                    <span class="user-name">User name</span>
                </div>
            </div>
            <a href="#about">About</a>
            <a href="#services">Services</a>
            <a href="#clients">Clients</a>
            <a href="#contact">Contact</a>
        </div>
        <h1>Beacons</h1>
    </div>
    <% if(message.length> 0) { %>
        <div class="added-msg">
            <%= message %>
        </div>
        <% } %>
            <div class="table">
                <div class="table-header"></div>
                <div class="C3div">
                    <div class="products">

                        <% if (beaconList.length> 0) {
                            beaconList.forEach(function(data) { %>
                            <div class="product-card col-sm-6 col-md-3 col-lg-1" id="product1">
                                <div class="product-img">
                                    <img class="product-image"
                                        src="https://images.unsplash.com/photo-1712313498056-1feb70bd6999?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                                        alt="">
                                </div>
                                <div class="product-info">
                                    <div class="product-name"><%= data.name %></div>
                                    <div class="product-price">
                                        <div class="product-price">$100</div>
                                    </div>
                                </div>
                            </div>
                            <% }); } else { %>
                                <p>no products</p>
                                <% } %>
                    </div>
                </div>
            </div>
</body>

<script>
    function toggleNav() {
        var sidenav = document.getElementById("mySidenav");
        var main = document.getElementById("main");
        if (sidenav.style.left === "-300px") {
            sidenav.style.left = "0";
            main.style.marginLeft = "300px";
        } else {
            sidenav.style.left = "-300px";
            main.style.marginLeft = "0px";
        }
    }
</script>

</html>